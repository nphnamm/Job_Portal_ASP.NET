
@model WebApplication3.Models.ForgotPasswordMV
@{
    ViewBag.Title = "Forgot";
}

<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="job-category-listing mb-50">
                <div class="col-md-12">
                    <h2 class="contact-title" align="center">Forgot Password</h2>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>

                @using (Html.BeginForm("Forgot", "User", FormMethod.Post,
                    new
                    {
                        @class = "form-contact ",
                        @method = "post",

                        @novalidate = "novalidate"
                    }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Email,
                                new
                                {
                                       htmlAttributes = new
                                           {
                                               @class = "form-control valid",
                                               @type = "text",
                                               @name = "Email",
                                               @id = "Email",
                                               @placeholder = "Enter Registered Email Address",
                                               @onfocus = "this.placeholder = ''",
                                               @onblur = "this.placeholder = 'Enter Email Address'",
                                               @required = "true"
                                           }
                                })
                                @Html.ValidationMessageFor(model => model.Email,
                               "",
                               new { @class = "text-success" })


                            </div>
                        </div>
                       

                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Send Email" class="button  boxed-btn">
                    </div>


                }

            </div>


            <div class="col-md-6" style="padding:60px 10px 10px 60px">

                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>Tasneem Plaz, Peshawar.</h3>
                        <p>KPK, Post Code 25000</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3>+84 977 187 016</h3>
                        <p>Mon to Fri 9am to 6pm</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3>nphnam@gmail.com</h3>
                        <p>Send me your query anytime!</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

</section>
