@model WebApplication3.Models.JobRequirmentsMV

@{
    ViewBag.Title = "Job Requirments";
}

<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Post Job Requirements</h2>


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12" style="margin-bottom:20px;">
                                <div class="form-group">

                                    @Html.DropDownList("JobRequirementID",
                                   null,
                                   "Select Requirments",
                                   htmlAttributes: new
                                   {
                                       @class = "form-control"
                                   })

                                    @Html.ValidationMessageFor(model => model.JobRequirementID,
                                   "",
                                   new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.PostJobID)

                                </div>
                            </div>
                            <div>
                                <br />
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">

                                    @Html.EditorFor(model => model.JobRequirementDetails, new
                                   {
                                       htmlAttributes = new
                                       {

                                               @class = "form-control",
                                               @type = "text",
                                               @name = "jobsdescription",
                                               @id = "jobsdescription",
                                               @placeholder = "Enter Description",
                                               @onfocus = "this.placeholder = ''",
                                               @onblur = "this.placeholder = 'Enter Description'",
                                               @required = "true"


                                       }
                                   })
                                    @Html.ValidationMessageFor(model => model.JobRequirementDetails,
                                   "",
                                   new { @class = "text-danger" })

                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="form-group mt-4">

                                <input type="submit" value="Add" class="button boxed-btn" />
                                
                            </div>
                         </div>
                            }

                            </div>
                     </div>
            </div>
  </section>

<hr />



<h2>JobRequiments</h2>
        <table class="table table-hover">
            <tr>
       
                <th>
                    Requirement Title
                </th>
                <th>
                    Details
                </th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model.Details)
            {
                <tr>
                

                    <td>
                        @Html.DisplayFor(modelItem => item.JobRequirementsTable.JobRequirementTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobRequirementDetails)
                    </td>

                    <td>

                        @Html.ActionLink("Delete", "DeleteRequirment", new { id = item.JobRequirementDetailID }, new { @class = "genric-btn danger medium radius", @style = "margin-top:10px; min-width:120px" })
                    </td>
                </tr>
            }

        </table>
